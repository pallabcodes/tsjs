{
  "name": "@roninbyte/joi-enhancer",
  "version": "1.0.6",
  "description": "A production-grade TypeScript-first wrapper and enhancer for Joi validation library",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npm run build",
    "test": "vitest run",
    "lint": "eslint src/**/*.ts"
  },
  "peerDependencies": {
    "joi": "^17.0.0"
  },
  "dependencies": {
    "joi-extract-type": "^15.0.3",
    "joi-to-json-schema": "^5.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "joi": "^17.13.3",
    "rollup": "^3.29.5",
    "rollup-plugin-dts": "^5.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.9.5",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "joi",
    "validation",
    "typescript",
    "schema"
  ],
  "license": "MIT"
}
